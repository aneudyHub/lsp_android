<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <!-- Indicador de estado -->
    <View
        android:id="@+id/appointment_status"
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:background="#E0E0E0" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/cuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6sp"
            android:textColor="@color/mr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vertical_separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            app:layout_constraintLeft_toRightOf="@+id/cuota"
            app:layout_constraintStart_toEndOf="@+id/cuota"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/idPrestamoH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/btn_login"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_separator"
            app:layout_constraintStart_toStartOf="@+id/vertical_separator"
            tools:text="#567" />

        <TextView
            android:id="@+id/nombre_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:maxLines="5"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp"
            android:textColor="@color/GRIS"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_separator"
            app:layout_constraintStart_toStartOf="@+id/vertical_separator"
            app:layout_constraintTop_toBottomOf="@+id/idPrestamoH"
            tools:text="Clínica Central" />

        <TextView
            android:id="@+id/fechaCobro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:maxLines="5"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"
            android:paddingTop="2dp"
            android:textColor="@color/GRIS"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_separator"
            app:layout_constraintStart_toStartOf="@+id/vertical_separator"
            app:layout_constraintTop_toBottomOf="@+id/nombre_cliente"
            tools:text="Clínica Central" />


        <TextView
            android:id="@+id/montoCobrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="RD$ 200000.000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/vertical_separator"
            app:layout_constraintStart_toStartOf="@+id/vertical_separator"
            app:layout_constraintTop_toBottomOf="@+id/fechaCobro" />


        <View
            android:id="@+id/vertical_separator1"
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_marginRight="60dp"
            android:background="@color/negro87"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/reimprimir"
            android:layout_width="39dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/impresora"
            app:layout_constraintStart_toStartOf="@+id/vertical_separator1"
            app:layout_constraintTop_toBottomOf="@+id/fechaCobro" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>